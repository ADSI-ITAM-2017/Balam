<% provide(:title, 'Sign up') %>
<h1>Regístrate</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :nombre %>
      <%= f.text_field :nombre %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :fecha, "Fecha de nacimiento" %>
      <%= f.date_field :fecha %>


      <%= f.label :Contraseña %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmación de la contraseña" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Registrarme", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>