<% provide(:title, @user.nombre) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.nombre %>
      </h1>
    </section>
  </aside>
  
  
  <div class="col-md-8">
    <% if @user.houses.any? %>
      <h3>CASAS (<%= @user.houses.count %>)</h3>
      <ol class="houses">
        <%= render @houses %>
      </ol>
      <%= will_paginate @houses %>
    <% end %>
  </div>
  
  
</div>