<% provide(:title, 'Conversación') %>
<h1>Regístrate</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(message) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :sender %>
      <%= f.text_field :sender_id, class: 'form-control' %>

      <%= f.label :reciever %>
      <%= f.text_field :recipient_id, class: 'form-control' %>

      <%= f.submit "Crear conversación", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>