<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>File</th>
      <th>Cost</th>
      <th>Street</th>
      <th>Number</th>
      <th>Postal</th>
      <th>Colony</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.title %></td>
        <td><%= house.description %></td>
        <td><%= house.file %></td>
        <td><%= house.cost %></td>
        <td><%= house.street %></td>
        <td><%= house.number %></td>
        <td><%= house.postal %></td>
        <td><%= house.colony %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

